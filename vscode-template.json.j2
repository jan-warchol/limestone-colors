{
	"name": "{{ name }} {{ version }}",
	"type": "dark",
	"colors": {
		"editor.background":                   "#{{ bg_0 }}",
		"editor.foreground":                   "#{{ fg_0 }}",
		"editorCursor.foreground":             "#{{ fg_0 }}",
		"editorLineNumber.foreground":         "#{{ dim_0 }}",
		"editorLineNumber.activeForeground":   "#{{ fg_0 }}",
		"editorIndentGuide.background":        "#{{ bg_3 }}",
		"editorIndentGuide.activeBackground":  "#{{ dim_0 }}",
		"editor.selectionBackground":          "#{{ bg_3 }}",
		"editor.inactiveSelectionBackground":  "#{{ bg_1 }}",
		"editor.selectionHighlightBackground": "#{{ bg_0 }}",
		"editor.selectionHighlightBorder":     "#{{ bg_3 }}"
	},
	"tokenColors": [
		{
			"scope": "comment",
			"settings": {
				{{ comment.vscode }}
			}
		},
		{
			"scope": "string.quoted.docstring",
			"settings": {
				{{ doc_comment.vscode }}
			}
		},
		{
			"name": "special elements in doc comments",
			"scope": "storage.type.class.jsdoc",
			"settings": {
				{{ doc_special.vscode }}
			}
		},
		{
			"scope": "string",
			"settings": {
				{{ string.vscode }}
			}
		},
		{
			{#- TODO? shell interpolation may need separate style #}
			"name": "string interpolation and escaping",
			"scope": [
				"string.constant.character.escape",
				"string.interpolated.dollar.shell",
				"string.interpolated.backtick.shell",
				"constant.character.format",
				"constant.character.escape",
				"punctuation.section.embedded",
				"punctuation.definition.template-expression"
			],
			"settings": {
				{{ str_special.vscode }}
			}
		},
		{
			"name": "code embedded in string interpolation",
			"scope": [
				"meta.embedded"
			],
			"settings": {
				{#- ensure no styling is inherited from "parent" string #}
				"fontStyle": "normal",
				"foreground": "#{{ fg_0 }}"
			}
		},
		{
			"name": "constant",
			"scope": [
				"constant",
				"variable.other.constant"
			],
			"settings": {
				{{ constant.vscode }}
			}
		},
		{
			"scope": "constant.numeric",
			"settings": {
				{{ number.vscode }}
			}
		},
		{
			"scope": "constant.language",
			"settings": {
				{{ boolean.vscode }}
			}
		},
		{
			"scope": "keyword.operator",
			"settings": {
				{{ operator.vscode }}
			}
		},
		{
			"name": "keywords (including function and class defs)",
			"scope": [
				"keyword.control",
				"storage.type.function",
				"storage.type.class"
			],
			"settings": {
				{{ keyword.vscode }}
			}
		},
		{
			"name": "imports",
			"scope": [
				"keyword.control.import",
				"keyword.other.import"
			],
			"settings": {
				{{ import.vscode }}
			}
		},
		{
			"name": "types and type modifiers",
			"scope": "storage",
			"settings": {
				{{ type.vscode }}
			}
		},
		{
			"name": "keyword argument name in function call",
			"scope": "variable.parameter.function-call",
			"settings": {
				{{ keyword_arg.vscode }}
			}
		},
		{
			"name": "reserved variables like this, super, self",
			"scope": "variable.language",
			"settings": {
				{{ special_var.vscode }}
			}
		},
		{
			"name": "built-ins, things from library/framework",
			"scope": "support",
			"settings": {
				{{ built_in.vscode }}
			}
		},
		{
			"scope": "support.type.exception",
			"settings": {
				{{ exception.vscode }}
			}
		},
		{
			"name": "Function decorator and similar elements",
			"scope": [
				"entity.name.function.decorator",
				"support.type.python"
			],
			"settings": {
				{{ decorator.vscode }}
			}
		},
		{
			"name": "Name of the defined class",
			"scope": [
				"entity.name.class",
				"entity.name.type.class"
			],
			"settings": {
				{{ class_def.vscode }}
			}
		},
		{
			"name": "Name of the defined function",
			"scope": [
				"entity.name.function",
				"entity.name.function.declaration"
			],
			"settings": {
				{{ function_def.vscode }}
			}
		},
		{
			"name": "function calls (works only for some languages)",
			"scope": "meta.function-call.generic",
			"settings": {
				{{ function_call.vscode }}
			}
		},
		{
			"name": "function calls and defs use the same scope in JS",
			"scope": "entity.name.function.js",
			"settings": {
				{{ function.vscode }}
			}
		},
		{
			"name": "ordinary variables (should by default use basic styling)",
			"scope": "variable",
			"settings": {
				"foreground": "#{{ fg_0 }}"
			}
		},
		{
			"scope": "variable.parameter",
			"settings": {
				{{ parameter.vscode }}
			}
		},
		{
			{#- These are highlighted like keywords by convention #}
			"name": "shell builtins",
			"scope": "support.function.builtin.shell",
			"settings": {
				{{ keyword.vscode }}
			}
		},
		{
			"name": "special shell syntax",
			"scope": [
				"punctuation.definition.logical-expression",
				"variable.other.special.shell"
			],
			"settings": {
				{{ shell_special.vscode }}
			}
		},
		{
			"name": "shell variable interpolation",
			"scope": [
				"variable.other.normal.shell",
				"variable.other.bracket.shell",
				"variable.other.positional.shell"
			],
			"settings": {
				{{ shell_var.vscode }}
			}
		},
		{
			{#-
				Note that we cannot style whole punctuation.definition scope,
				because it contains subscopes like string, comment, variable
				etc. which we definitely don't want to style this way.
			#}
			"name": "dots, parens etc. (token separators)",
			"scope": [
				"punctuation.definition.block",
				"punctuation.definition.parameters",
				"punctuation.definition.arguments",
				"punctuation.definition.list",
				"punctuation.definition.dict",
				"punctuation.definition.binding-pattern",
				"punctuation.parenthesis",
				"punctuation.separator",
				"punctuation.accessor",
				"punctuation.section"
			],
			"settings": {
				{{ punctuation.vscode }}
			}
		}
	]
}
